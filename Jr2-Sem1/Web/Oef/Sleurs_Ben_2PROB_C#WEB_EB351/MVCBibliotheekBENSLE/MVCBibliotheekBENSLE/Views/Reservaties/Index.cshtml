@model IEnumerable<MVCBibliotheekBENSLE.Models.Data.Reservatie>

@{
    ViewData["Title"] = "Index";
    string vandaag = DateTime.Now.ToLongDateString();
}
<reservatie-kleur>
<p>
   @vandaag
</p>
@if(Model.Count()==0){
    <p>Geen reservaties</p>
}
else{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Gebruiker
                </th>
                <th>
                    Zaal naam
                </th>
                <th>
                    Reservatie datum
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gebruiker.FullName())

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VergaderZaal.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datum)
                    </td>
@*                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ReservatieId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ReservatieId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ReservatieId">Delete</a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
}
</reservatie-kleur>

