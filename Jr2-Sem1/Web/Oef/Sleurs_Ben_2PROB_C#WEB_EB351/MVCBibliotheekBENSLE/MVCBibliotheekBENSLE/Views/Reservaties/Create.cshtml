@model MVCBibliotheekBENSLE.Models.Data.Reservatie

@{
    ViewData["Title"] = "Create";
}

<h1>Reservatie van een vergaderzaal</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VergaderZaalId" class="control-label"></label>
                <select asp-for="VergaderZaalId" class ="form-control" asp-items="ViewBag.VergaderZaalId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Boek deze vergaderzaal" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
