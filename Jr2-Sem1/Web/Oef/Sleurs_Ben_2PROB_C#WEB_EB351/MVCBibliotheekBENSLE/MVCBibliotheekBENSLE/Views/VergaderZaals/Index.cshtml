@model IEnumerable<MVCBibliotheekBENSLE.Models.Data.VergaderZaal>

@{
    ViewData["Title"] = "Index";
}

<h1>Vergaderzalen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantalPersonen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AantalPersonen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VergaderZaalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VergaderZaalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VergaderZaalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
