<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ViewsDemo.MainPage">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="Fuchsia"/>
    </ContentPage.Behaviors>
    <ScrollView>
        <VerticalStackLayout
            x:Name="Base"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            BackgroundColor="white">
            <Button Text="CollectionView" Clicked="BtnCollectionView">
                
            </Button>
            <Switch x:Name="Switch" IsToggled="True" Toggled="Switch_Toggled" ></Switch>
            <SearchBar x:Name="SearchBar" SearchButtonPressed="SearchBar_SearchButtonPressed">
                
            </SearchBar>
            <WebView x:Name="WebView" Source="https://www.pxl.be">
                
            </WebView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
