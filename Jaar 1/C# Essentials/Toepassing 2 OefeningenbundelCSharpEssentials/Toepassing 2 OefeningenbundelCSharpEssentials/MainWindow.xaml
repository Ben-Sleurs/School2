            Name="InvulveldOppervlakte"
            HorizontalAlignment="Left" 
            Margin="300,178,0,0" 
            Text="" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Button 
            Name="Bereken"
            Content="Bereken" 
            HorizontalAlignment="Left" 
            Margin="500,121,0,0" 
            VerticalAlignment="Top" Click="Bereken_Click"/>
        <Button 
            Name ="Wissen"
            Content="Wissen" 
            HorizontalAlignment="Left" 
            Margin="500,181,0,0" 
            VerticalAlignment="Top"
            Click="Wissen_Click"/>
           


    </Grid>
</Window>
